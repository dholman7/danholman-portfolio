# Production Environment Configuration
STAGE=prod
SERVICE_NAME=student-factory
NODE_ENV=production

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012

# DynamoDB Configuration
STUDENTS_TABLE_NAME=student-factory-students-prod
STUDENTS_TABLE_GSI_EMAIL=EmailIndex
STUDENTS_TABLE_GSI_STATUS=StatusIndex
STUDENTS_TABLE_GSI_EMPLOYER=EmployerIndex
STUDENTS_TABLE_LSI_PROGRAM=ProgramIndex

# S3 Configuration
DATA_BUCKET_NAME=student-factory-data-prod-123456789012
DATA_BUCKET_REGION=us-west-2

# SQS Configuration
PROCESSING_QUEUE_URL=https://sqs.us-west-2.amazonaws.com/123456789012/student-factory-processing-prod
COMPLETION_QUEUE_URL=https://sqs.us-west-2.amazonaws.com/123456789012/student-factory-completion-prod

# Step Functions Configuration
STATE_MACHINE_ARN=arn:aws:states:us-west-2:123456789012:stateMachine:student-factory-workflow-prod
STATE_MACHINE_NAME=student-factory-workflow-prod

# API Gateway Configuration
API_URL=https://api.example.com
API_KEY=prod-api-key-abcdef
API_STAGE=prod

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=1024
LAMBDA_LOG_RETENTION_DAYS=90

# CloudWatch Configuration
LOG_GROUP_PREFIX=/aws/lambda/student-factory
LOG_RETENTION_DAYS=90

# Monitoring Configuration
ENABLE_XRAY_TRACING=true
ENABLE_DETAILED_MONITORING=true

# Security Configuration
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# Performance Configuration
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
SQS_VISIBILITY_TIMEOUT=900
SQS_MESSAGE_RETENTION_PERIOD=1209600

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_PARALLEL_PROCESSING=true
ENABLE_NOTIFICATIONS=true
ENABLE_ARCHIVING=true

# Limits and Thresholds
MAX_BATCH_SIZE=500
MAX_CONCURRENT_EXECUTIONS=50
MAX_RETRY_ATTEMPTS=5
TIMEOUT_THRESHOLD=300

# External Services
EXTERNAL_API_TIMEOUT=10000
EXTERNAL_API_RETRY_ATTEMPTS=5
