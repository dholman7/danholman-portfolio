{
  "name": "danholman-cloud-native-app",
  "version": "1.0.0",
  "description": "Highly scalable AWS serverless application demonstrating cloud-native development expertise",
  "main": "lib/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:allure": "jest && allure generate reports/allure-results --clean -o reports/allure-report",
    "test:allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "test:allure:open": "allure open reports/allure-report",
    "test:allure:serve": "allure serve reports/allure-results --port 5051",
    "cdk": "cdk",
    "cdk:deploy": "cdk deploy",
    "cdk:destroy": "cdk destroy",
    "cdk:diff": "cdk diff",
    "cdk:synth": "cdk synth",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "package": "yarn build && yarn package:lambda",
    "package:lambda": "cd lambda && yarn build",
    "deploy": "yarn package && cdk deploy",
    "clean": "rm -rf lib dist node_modules/.cache"
  },
  "keywords": [
    "aws",
    "serverless",
    "typescript",
    "cdk",
    "lambda",
    "dynamodb",
    "api-gateway",
    "step-functions"
  ],
  "author": "Dan Holman <danxholman@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "aws-cdk": "^2.100.0",
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-allure2-reporter": "^2.2.6",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-lambda": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-sfn": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@aws-sdk/util-dynamodb": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/lambda"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "lambda/**/*.ts",
      "!lambda/**/*.d.ts",
      "!lambda/**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-allure2-reporter",
        {
          "outputDir": "reports/allure-results"
        }
      ]
    ]
  }
}
