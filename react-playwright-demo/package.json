{
  "name": "react-playwright-demo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern React TypeScript demo app with registration/sign-up functionality for Playwright testing",
  "keywords": [
    "react",
    "typescript",
    "vite",
    "tailwind",
    "playwright",
    "demo"
  ],
  "author": "Dan Holman",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview --host",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "postinstall": "playwright install --with-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:integration": "jest --testPathPatterns=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --project=chromium --workers=2",
    "test:e2e:parallel": "playwright test --workers=4",
    "test:e2e:max-parallel": "playwright test --workers=6",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:allure": "playwright test && allure generate allure-results --clean -o allure-report && allure open allure-report",
    "test:allure:generate": "allure generate allure-results --clean -o allure-report",
    "test:allure:open": "allure open allure-report",
    "test:accessibility": "playwright test tests/accessibility/accessibility.spec.ts",
    "test:accessibility:headed": "playwright test tests/accessibility/accessibility.spec.ts --headed",
    "test:accessibility:debug": "playwright test tests/accessibility/accessibility.spec.ts --debug"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.543.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "allure-playwright": "^3.3.3",
    "autoprefixer": "^10.4.21",
    "axe-playwright": "^2.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
